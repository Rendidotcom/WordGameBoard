{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./frontend"     // <- Tambahan penting supaya struktur file tetap rapi
  },
  "include": [
    "frontend/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
