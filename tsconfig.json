{
  "compilerOptions": {
    "target": "ES2020",                          // Lebih modern dari ES6
    "module": "ESNext",                          // Gunakan ES modules (import/export)
    "moduleResolution": "node",                 
    "outDir": "dist",                            // Output hasil kompilasi
    "rootDir": ".",                              // Akar dari semua source (frontend dan backend)
    "strict": true,                              // Mode ketat
    "esModuleInterop": true,                     // Agar kompatibel dengan require()
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true                    // Agar bisa import file .json
  },
  "include": [
    "backend/src/**/*.ts",                       // Sertakan semua TS di backend
    "frontend/**/*.ts"                           // Sertakan semua TS di frontend
  ],
  "exclude": [
    "dist",                                      // Jangan kompilasi folder output
    "node_modules"                               // Kecualikan dependensi
  ]
}
