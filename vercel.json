{
  "version": 2,
  "installCommand": "npm install --include=dev",
  "buildCommand": "npx tsc",
  "builds": [
    { "src": "backend/src/**/*.ts", "use": "@vercel/node" },
    { "src": "frontend/**/*",       "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/src/$1.ts" },
    { "src": "/(.*)",     "dest": "frontend/$1"      }
  ]
}
