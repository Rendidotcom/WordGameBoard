{
  "version": 2,
  "installCommand": "npm install --include=dev && chmod +x node_modules/.bin/tsc",
  "buildCommand": "npm run build",
  "builds": [
    { "src": "api/**/*.ts",      "use": "@vercel/node"   },
    { "src": "frontend/**/*",    "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/$1.ts"            },
    { "src": "/(.*)",     "dest": "frontend/$1"          }
  ]
}
