{
  "version": 2,
  "builds": [
    { "src": "api/**/*.ts", "use": "@vercel/node" },
    { "src": "frontend/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "^/api/(.*)", "dest": "/api/$1" },
    { "src": "^/login$", "dest": "/frontend/login.html" },
    { "src": "^/register$", "dest": "/frontend/register.html" },
    { "src": "^/game$", "dest": "/frontend/game.html" },
    { "src": "^/$", "dest": "/frontend/index.html" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ]
}
