{
  "version": 2,
  "builds": [
    { "src": "api/**/*.ts", "use": "@vercel/node" },
    { "src": "frontend/**/*", "use": "@vercel/static" }
  ],
  "rewrites": [
    { "source": "/", "destination": "/frontend/index.html" },
    { "source": "/login.html", "destination": "/frontend/login.html" },
    { "source": "/register.html", "destination": "/frontend/register.html" },
    { "source": "/game.html", "destination": "/frontend/game.html" },
    { "source": "/api/(.*)", "destination": "/api/$1.ts" }
  ]
}
